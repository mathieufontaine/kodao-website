---
export interface Props {
  title: string;
  heading: string;
  description: string;
  image: string;
  white?: boolean;
  reversed?: boolean;
  items?: string[];
}
const {
  title,
  heading,
  description,
  image,
  white,
  reversed = false,
  items,
} = Astro.props;
---

<section class={`section ${white && "section--white"}`}>
  <div class="container">
    <p class="title">{title}</p>
    <h2 class="heading">{heading}</h2>
    <p class="text">{description}</p>
    <div class="flex">
      <div
        class="flex_text"
        data-aos="fade-left"
        data-aos-easing="ease-out-cubic"
        data-aos-duration="1000"
      >
        <ul class="flex_list">
          {
            items?.map((item) => (
              <li class="flex_key">
                <i
                  class={`fa-solid ${
                    title === "concept" ? "fa-infinity" : "fa-circle-notch"
                  }`}
                />
                <p>{item}</p>
              </li>
            ))
          }
        </ul>
        <a href="./concept.html" class="button button--flex" type="button">
          <span class="button_text">Discover our <b>{title}</b></span>
        </a>
      </div>
      <div
        class={`flex_img ${reversed && "flex_img--first"}`}
        data-aos="fade-right"
        data-aos-easing="ease-out-cubic"
        data-aos-duration="1000"
      >
        <img src={image} alt={title} />
      </div>
    </div>
  </div>
</section>

<style>
  .flex {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 20px;
    justify-content: space-around;
    margin-top: 20px;
  }

  .flex_img {
    width: 100%;
    margin: auto;
    height: 100%;
    max-height: 360px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .flex_img--first {
    order: -1;
  }
  .flex_img img {
    object-fit: contain;
  }

  .flex_img:first img {
    width: 80%;
  }

  .flex_img--mobile {
    display: none;
    padding: 20px 0;
  }
  .flex_text {
    display: flex;
    flex-direction: column;
  }

  .flex_title {
    font-weight: 500;
    font-size: 2.3rem;
  }
  .flex_list {
    list-style: none;
    padding: 0 10px 30px;
  }

  .flex_key {
    padding: 10px;
    display: flex;
    gap: 15px;
  }

  .flex_key .fa-solid {
    padding-top: 5px;
    font-size: 1.5rem;
  }

  .flex_title .fa-solid {
    margin-right: 10px;
  }
</style>
