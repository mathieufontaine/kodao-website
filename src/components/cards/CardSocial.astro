---
import Button from "../common/Button.astro";

export interface Props {
  href: string;
  title: string;
  description: string;
  img: string;
  cta: string;
  primary?: boolean;
}

const { href, title, description, img, cta, primary = false } = Astro.props;
---

<div class="card">
  <div class="card_img">
    <img src={img} alt={`${title} kodao`} />
  </div>
  <h4 class="card_title">{title}</h4>
  <div class="card_text">
    <p>{description}</p>
  </div>
  <Button btnHref={href} btnText={cta} type={primary ? "primary" : ""} />
</div>

<style>
  .card {
    box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.2);
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-cards: center;
    flex-direction: column;
    background: var(--secondary-color);
    color: var(--primary-color);
    padding: 30px 20px;
    transition: all 0.5s ease;
    box-shadow: 0px 15px 35px rgba(231, 231, 231, 0.2);
  }

  .card:hover {
    background: var(--primary-color);
    color: var(--secondary-color);
  }

  .card_title {
    padding: 10px;
    font-size: 2rem;
  }

  .card_img {
    border: 5px solid black;
    height: 150px;
    border-radius: 50%;
    width: 150px;
    margin: auto;
    overflow: hidden;
  }
  @media (min-width: 1600px) {
    .card img {
      object-position: 50% 63%;
    }
  }

  @media (max-width: 800px) {
    .card {
      padding: 10px;
    }
    .card_img {
      width: 100px;
      height: 100px;
    }
  }
  @media (max-width: 615px) {
    .card {
      width: 100%;
    }
  }
</style>
