---
import Button from "../common/Button.astro";

export interface Props {
  href: string;
  title: string;
  description: string;
  img: string;
  cta: string;
  primary?: boolean;
}

const { href, title, description, img, cta, primary = false } = Astro.props;
---

<div class="item">
  <div class="item_img">
    <img src={img} alt={`${title} kodao`} />
  </div>
  <h4 class="item_title">{title}</h4>
  <div class="item_text">
    <p>{description}</p>
  </div>
  <Button btnHref={href} btnText={cta} type={primary ? "primary" : ""} />
</div>

<style>
  .item {
    box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.2);
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: var(--secondary-color);
    color: var(--primary-color);
    padding: 30px 20px;
    transition: all 0.5s ease;
    box-shadow: 0px 15px 35px rgba(231, 231, 231, 0.2);
  }

  .item:hover {
    background: var(--primary-color);
    color: var(--secondary-color);
  }

  .item_title {
    padding: 10px;
    font-size: 2rem;
  }

  .item_img {
    border: 5px solid black;
    height: 150px;
    border-radius: 50%;
    width: 150px;
    margin: auto;
    overflow: hidden;
  }
</style>
