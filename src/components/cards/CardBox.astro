---
export interface Props {
  href: string;
  title: string;
  description: string;
  img: string;
  cta: string;
  primary?: boolean;
}

const { href, title, description, img, cta, primary } = Astro.props;
---

<a href={img} target="_blank">
  <div class="box">
    <div class="box_img">
      <img src={img} alt={`${title} kodao`} />
    </div>
    <h4 class="box_title">{title}</h4>
    <div class="box_text">
      <p>{description}</p>
    </div>
    <button class={primary ? "button button--primary" : "button"}>
      <span class="button_text">{cta}</span>
    </button>
  </div>
</a>

<style>
  .box {
    box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.2);
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: var(--secondary-color);
    color: var(--primary-color);
    padding: 30px 20px;
    transition: all 0.5s ease;
    box-shadow: 0px 15px 35px rgba(231, 231, 231, 0.2);
  }

  .box:hover {
    background: var(--primary-color);
    color: var(--secondary-color);
  }

  .box_title {
    padding: 10px;
    font-size: 2rem;
  }

  .box_img {
    border: 5px solid black;
    height: 150px;
    border-radius: 50%;
    width: 150px;
    margin: auto;
    overflow: hidden;
  }
</style>
