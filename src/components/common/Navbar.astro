---
import logo from "../../assets/logo/logo-white.svg";
import englishFlag from "../../assets/language/united-kingdom.png";
import frenchFlag from "../../assets/language/france.png";
import Menu from "./Menu.astro";
import Button from "./Button.astro";
export interface Props {
  page: string;
  fr?: boolean;
}

const { fr = false, page } = Astro.props;
---

<header class="header">
  <a class="logo_link" href="/" aria-label="homepage">
    <img class="logo" src={logo} alt="logo kodao white" />
  </a>
  <nav class="navbar">
    <ul>
      <li
        class={page !== "home"
          ? "navbar_item"
          : "navbar_item navbar_item--active"}
      >
        <a href={fr ? "/fr" : "/"} id="nav-web3" class="navbar_link">Home</a>
      </li>
      <li
        class={page !== "concept"
          ? "navbar_item"
          : "navbar_item navbar_item--active"}
      >
        <a
          href={fr ? "/fr/concept" : "/concept"}
          id="nav-concept"
          class="navbar_link">Concept</a
        >
      </li>
      <li
        class={page !== "offers"
          ? "navbar_item"
          : "navbar_item navbar_item--active"}
      >
        <a
          href={fr ? "/fr/offres" : "/offers"}
          id="nav-offer"
          class="navbar_link">{fr ? "Offres" : "Offers"}</a
        >
      </li>
      <li
        class={page !== "contact"
          ? "navbar_item"
          : "navbar_item navbar_item--active"}
      >
        <a
          href={fr ? "/fr/contact" : "/contact"}
          id="nav-contact"
          class="navbar_link">Contact</a
        >
      </li>
      <li
        class={page !== "faq"
          ? "navbar_item"
          : "navbar_item navbar_item--active"}
      >
        <a href={fr ? "/fr/faq" : "/faq"} id="nav-faq" class="navbar_link"
          >FAQ</a
        >
      </li>
      <li class="navbar_item navbar_item--blog">
        <a href="/blog" id="nav-faq" class="navbar_link">Blog</a>
      </li>
    </ul>
  </nav>
  <div class="language language--desktop">
    {
      fr ? (
        <a href="/" class="language_link">
          <img class="language_img" src={englishFlag} alt="english flag" />
        </a>
      ) : (
        <a href="/fr" class="language_link">
          <img class="language_img" src={frenchFlag} alt="drapeau français" />
        </a>
      )
    }
  </div>
  <div class="hamburger">
    <i class="bx bx-menu open"></i>
    <i class="bx bx-x close"></i>
  </div>
</header>
<Menu fr={fr} page={page} englishFlag={englishFlag} frenchFlag={frenchFlag} />
<div id="cta">
  <Button
    btnHref={fr ? "/fr/contact" : "/contact"}
    btnText={fr ? "Réserver une démo" : "Book a demo"}
    type="fixed"
  />
</div>
<button id="topBtn"><i class="fa-solid fa-angle-up"></i></button>
<style>
  #cta {
    display: none;
  }

  #topBtn {
    display: none;
    position: fixed;
    bottom: 5px;
    left: 5px;
    z-index: 99;
    font-size: 16px;
    border: 2px solid white;
    outline: none;
    background-color: var(--primary-color);
    color: white;
    cursor: pointer;
    padding: 10px 15px;
    margin: 10px 20px;
    border-radius: 4px;
  }

  #topBtn:hover {
    background-color: var(--accent-color);
  }
  /* Header */
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--secondary-color);
    min-height: 10vh;
    position: fixed;
    width: 100%;
    z-index: 10;
    padding: 10px 6%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px) saturate(180%);
    border-bottom: 2px solid var(--secondary-color);
  }

  .logo_link {
    height: 100%;
  }

  .logo {
    width: 150px;
    object-fit: contain;
  }

  /* Navbar */

  .navbar ul {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .navbar_item,
  .menu_item {
    list-style: none;
    display: inline-block;
    position: relative;
  }

  .navbar_item {
    margin-right: 10px;
  }
  .navbar_item::after {
    content: "";
    height: 2px;
    width: 0%;
    background: var(--accent-color);
    position: absolute;
    left: 0;
    bottom: -2px;
    transition: 0.5s;
  }

  .navbar_item:hover::after {
    width: 100%;
  }

  .navbar_link {
    color: inherit;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 1.5rem;
  }

  .navbar_item--active .navbar_link {
    color: var(--accent-color);
  }

  .navbar_item--blog {
    background: var(--secondary-color);
    color: var(--primary-color);
    padding: 5px 10px;
    border-radius: 10px;
  }

  .navbar_item--blog:hover {
    background: var(--accent-color);
    color: var(--secondary-color);
  }

  /* hamburger */

  .hamburger {
    display: none;
    position: relative;
    width: 5rem;
    height: 5rem;
    border: 1px solid var(--secondary-color);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-tap-highlight-color: transparent;
  }

  .hamburger i {
    position: absolute;
    color: var(--secondary-color);
    font-size: 4rem;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    transition: all 0.3s ease;
  }

  /* hamburger */

  .hamburger i.close {
    opacity: 0;
  }

  .hamburger--active {
    background: var(--accent-color);
  }

  .hamburger--active i {
    color: var(--secondary-color);
    transform: translate(-50%, -50%) rotate(180deg);
  }

  .hamburger--active i.close {
    opacity: 1;
  }

  .hamburger--active i.open {
    opacity: 0;
  }
  /* Menu */

  .menu {
    display: none;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 10vh;
    right: -100%;
    min-height: 90vh;
    width: 50%;
    z-index: 100;
    padding: 8%;
    background-color: rgba(0, 0, 0, 0.8);
    transition: all 0.5s ease-in-out;
  }

  .menu--active {
    display: block;
    right: 0;
  }

  .menu_list {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .menu_item {
    padding: 1rem 0;
    color: var(--secondary-color);
    text-align: center;
  }

  .menu_item::after {
    content: "";
    height: 2px;
    width: 0%;
    background: var(--secondary-color);
    position: absolute;
    left: 0;
    bottom: -2px;
    transition: 0.5s;
  }

  .menu_item:hover::after {
    width: 100%;
  }

  .navbar_item--blog:after,
  .menu_item--blog:after {
    height: 0;
  }

  .menu_item--active .menu_link {
    color: var(--accent-color);
  }

  .menu_item--social {
    margin: auto 0 50px;
  }
  .menu_link {
    font-size: 2rem;
    font-weight: 500;
  }

  /* language */

  .language {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .language_text {
    font-size: 2rem;
    color: white;
  }
  .language_link {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .language_img {
    width: 3rem;
    margin-right: 10px;
    object-fit: contain;
  }

  .language_img:hover {
    border: 2px solid white;
    border-radius: 100%;
  }

  @media (min-width: 2000px) {
    .logo {
      width: 200px;
    }
  }
  @media (min-width: 1600px) {
    .logo {
      width: 180px;
    }
  }
  @media (max-width: 1100px) {
    .navbar_item {
      margin: 0;
    }
  }

  @media (max-width: 800px) {
    .navbar {
      display: none;
    }
    .logo {
      width: 120px;
    }
    .hamburger {
      display: block;
    }
    .language--desktop {
      display: none;
    }
  }
</style>

<script>
  const cta = document.getElementById("cta");
  const topBtn = document.getElementById("topBtn");

  window.onscroll = function () {
    scrollFunction();
  };

  function scrollFunction() {
    if (
      document.body.scrollTop > 2000 ||
      document.documentElement.scrollTop > 2000
    ) {
      topBtn.style.display = "block";
      cta.style.display = "block";
    } else {
      topBtn.style.display = "none";
      cta.style.display = "none";
    }
  }

  function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  }

  topBtn.addEventListener("click", topFunction);
</script>
