---
import Button from "../common/Button.astro";

export interface Props {
  title: string;
  description: string;
  btnText: string;
  downText: string;
}
const { title, description, btnText, downText } = Astro.props;
---

<section id="hero" class="section showcase">
  <div class="container container--showcase">
    <div class="showcase_text">
      <h1
        class="showcase_title"
        data-aos="zoom-in-down"
        data-aos-duration="1000"
      >
        {title}
      </h1>
      <p
        class="showcase_subtitle"
        data-aos="flip-left"
        data-aos-duration="1000"
      >
        {description}
      </p>
      <Button btnHref="./contact.html" btnText={btnText} type="hero" />
    </div>
  </div>
  <a href="#concept" class="discover">
    <b>{downText}</b>
  </a>
  <a href="#concept">
    <i class="fa-solid fa-angle-down arrow arrow--discover"></i>
  </a>
</section>

<style>
  .showcase {
    padding-top: 0;
    height: 100vh;
    background-image: linear-gradient(rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.05)),
      url("../../assets/background/web3_kodao.jpeg");
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-position: center center;
  }

  .showcase_text {
    width: 80%;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .showcase_subtitle {
    font-weight: 500;
    font-size: 1.8rem;
    line-height: 3rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    text-align: center;
    color: var(--secondary-color);
    padding: 40px 0;
  }

  .showcase_line {
    width: 50%;
  }

  .discover {
    text-align: center;
    position: absolute;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
    background: none;
    color: var(--secondary-color);
    font-size: 1.8rem;
    margin: auto;
    background: none;
    border: none;
    text-transform: uppercase;
    font-weight: 400;
  }

  .arrow--discover {
    position: absolute;
    animation: jumpInfinite 1.2s infinite;
    bottom: 8%;
    left: 50%;
    transform: translateX(-50%);

    font-size: 2rem;
  }

  #topBtn {
    display: none;
    position: fixed;
    bottom: 5px;
    left: 5px;
    z-index: 99;
    font-size: 18px;
    border: 2px solid white;
    outline: none;
    background-color: var(--primary-color);
    color: white;
    cursor: pointer;
    padding: 10px 15px;
    margin: 10px 20px;
    border-radius: 4px;
  }

  #topBtn:hover {
    background-color: var(--accent-color);
  }

  @keyframes jumpInfinite {
    0% {
      bottom: 8%;
    }
    50% {
      bottom: 5%;
    }
    100% {
      bottom: 8%;
    }
  }

  @keyframes scaleIn {
    0% {
      transform: scale(95%);
    }
    50% {
      transform: scale(110%);
    }
    100% {
      transform: scale(95%);
    }
  }
  @media (max-width: 340px) {
    .showcase_subtitle {
      padding: 20px 0;
    }
    .discover {
      display: none;
    }
  }
</style>
