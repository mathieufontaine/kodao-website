---
import Button from "../common/Button.astro";

export interface Props {
  title: string;
  text?: string;
  btnText?: string;
  btnHref?: string;
  btnText2?: string;
  btnHref2?: string;
  background?: string;
  paddingTop?: boolean;
}

const {
  title,
  text,
  btnText,
  btnHref,
  btnText2,
  btnHref2,
  background = false,
  paddingTop = false,
} = Astro.props;
---

<section
  class={background ? `section section--${background}` : "section"}
  style={paddingTop ? "padding-top: 150px" : ""}
>
  <div class="container">
    <div class="cta">
      <div class="cta_text">
        <h2 class="cta_title">{title}</h2>
        {text && <p>{text}</p>}
      </div>
      <div class="cta_btn">
        {
          btnText2 && (
            <Button btnHref={btnHref2} btnText={btnText2} type="primary" />
          )
        }
        {btnText && <Button btnHref={btnHref} btnText={btnText} type="cta" />}
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    display: grid;
    width: 80%;
  }
  .cta_title {
    padding-bottom: 10px;
  }
  .cta--grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
  }
  .cta--inverse {
    display: grid;
    grid-template-columns: 1fr 2fr;
  }
  .cta_text {
    text-align: center;
  }
  .cta--grid .cta_text,
  .cta--inverse .cta_text {
    text-align: left;
  }
  .cta_btn {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: auto;
    gap: 14px;
  }
  .cta_btn--col {
    flex-direction: column;
  }

  @media (max-width: 800px) {
    .cta {
      grid-template-columns: 1fr;
      width: 100%;
      grid-gap: 0;
      text-align: center;
    }
  }
  @media (max-width: 615px) {
    .cta_text {
      text-align: center;
    }
    .cta_btn {
      gap: 0;
    }
  }
</style>
