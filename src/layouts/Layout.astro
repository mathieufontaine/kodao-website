---
export interface Props {
  title: string;
  language: string;
}

import Navbar from "../components/Navbar.astro";

const { title, language } = Astro.props;
---

<!DOCTYPE html>
<html lang={language === "en" ? "en" : "fr"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content={language === "en"
        ? "Web3 Consulting and Development Agency"
        : "Kodao.io - Agence Web3 de Conseil & DÃ©veloppement Web"}
    />
    <meta property="og:site_name" content="Kodao.io" />
    <meta
      property="og:description"
      content={language === "en"
        ? "We support organisations in their transition to Web3"
        : "Nous accompagnons les organisations dans leur transition vers le Web3"}
    />
    <meta
      property="og:image"
      content="https://www.kodao.io/assets/pictures/web3-faq.jpeg"
    />
    <meta property="og:url" content="https://www.kodao.io" />
    <title>{title}</title>
  </head>

  <body>
    <Navbar language={language} />
    <slot />
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap");

      :root {
        --primary-color: black;
        --secondary-color: white;
        --accent-color: #a87bcb;
        --blue-color: #091834;
        --placeholder-color: #818181;
        --bg-color: #000;
      }

      * {
        font-family: Poppins;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        /* -webkit-user-select: none;
  -webkit-touch-callout: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none; */
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      a.anchor {
        display: block;
        position: relative;
        top: -10vh;
        visibility: hidden;
      }

      body {
        background-color: var(--bg-color);
      }

      html {
        scroll-behavior: smooth;
        font-size: 10px;
      }

      h1 {
        font-weight: 800;
        font-size: 4.5rem;
        text-align: center;
      }

      h2 {
        font-size: 2.8rem;
        text-align: center;
        font-weight: 600;
      }

      h3 {
        font-weight: 500;
        font-size: 2.3rem;
      }

      h4 {
        font-weight: bold;
        font-size: 1.8rem;
        padding-bottom: 10px;
      }

      p,
      li {
        font-weight: 100;
        font-size: 1.4rem;
        line-height: 2.5rem;
      }

      b {
        font-weight: 500;
      }
      ul {
        list-style: none;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .quote {
        font-style: italic;
        /* font-weight: 300; */
      }

      .grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        justify-content: center;
        align-items: center;
        width: 80%;
      }

      .grid_img {
        height: 200px;
      }

      .grid_img img {
        object-fit: contain;
      }

      /*----- Container -------*/

      .container {
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 100%;
        padding: 4% 8%;
        /* padding: 30px; */
        overflow-x: clip;
        max-width: 1800px;
        margin: auto;
        position: relative;
        height: 100%;
      }

      /* .container--hero {
  height: 100%;
  justify-content: center;
} */

      /* section */

      .section {
        position: relative;
        background: var(--primary-color);
        color: var(--secondary-color);
      }

      .section--white {
        background: var(--secondary-color);
        color: var(--primary-color);
      }

      .section--blue {
        background: var(--blue-color);
        color: var(--secondary-color);
        margin-bottom: -200px;
      }

      /* .section--blue h3 {
  font-size: 4rem;
  width: 70%;
  text-align: center;
  padding: 30px 0;
} */

      .section--cta {
        padding-top: 150px;
        padding-bottom: 20px;
      }

      .section--about {
        background-image: linear-gradient(
            rgba(0, 0, 0, 0.5),
            rgba(0, 0, 0, 0.5)
          ),
          url("/assets/background/about.jpeg");
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-position: center center;
      }

      .title {
        font-size: 1.8rem;
        font-weight: 800;
        text-align: center;
        color: var(--accent-color);
        text-transform: uppercase;
        margin-bottom: 20px;
      }

      .heading {
        margin-bottom: 20px;
      }

      .text {
        margin: 20px 0;
        text-align: center;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        align-items: start;
        justify-content: space-around;
        width: 100%;
        text-align: center;
      }

      .col {
        padding: 20px;
      }
      /* Button */

      .button {
        position: relative;
        width: 260px;
        height: auto;
        font-size: 1.5rem;
        padding: 15px;
        text-align: center;
        border-radius: 50px;
        font-weight: 500;
        background: var(--accent-color);
        color: var(--secondary-color);
        cursor: pointer;
        margin: 10px 20px;
        transition: 0.5s all ease;
        border: none;
        /* border: 2px solid var(--accent-color); */
        /* overflow: hidden; */
      }

      .button:hover {
        transform: scale(110%);
        animation: none;
      }

      /* .button:hover {
  background: transparent;
} */

      .button--primary {
        background: var(--primary-color);
        color: var(--secondary-color);
        /* margin: 25px auto; */
        /* border: 2px solid var(--primary-color); */
      }

      .button--secondary {
        background: var(--secondary-color);
        color: var(--primary-color);
      }

      .button--hero {
        background: var(--secondary-color);
        color: var(--primary-color);
      }
      .button--hero:hover {
        background: var(--accent-color);
        color: var(--secondary-color);
      }

      .button--cta {
        transform: scale(90%);
        animation: scaleIn 2.5s infinite;
      }

      .button--fixed {
        display: none;
        position: fixed;
        bottom: 5px;
        right: 5px;
        z-index: 10;
        font-size: 1.3rem;
        background-color: var(--primary-color);
        padding: 12px 15px;
        text-transform: uppercase;
        font-weight: 700;
        border-radius: 5px;
        border: 2px solid var(--secondary-color);
      }

      .button--fixed:hover {
        background-color: var(--accent-color);
        border: 2px solid var(--secondary-color);
      }

      .button_text {
        z-index: 2;
        position: relative;
        /* font-size: 1.8rem; */
      }

      /* .button_effect {
  position: absolute;
  background: var(--accent-color);
  border-radius: 50px;
  width: 0%;
  left: 0;
  bottom: 0;
  top: 0;
  transition: 0.7s;
} */

      .button--faq .button_text {
        transition: all 1s ease;
      }
      .button--faq:hover .button_text {
        font-size: 1.6rem;
      }

      .button_container {
        width: 70%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        align-items: center;
        justify-content: center;
        margin-top: 20px;
      }

      /* .arrow {
  position: absolute;
  animation: jumpInfinite 1s infinite;
  left: 60%;
  transform: translate(-50%, -40%);
  margin: auto;
  color: var(--secondary-color);
  font-size: 3rem;
} */

      .discover {
        text-align: center;
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        background: none;
        color: var(--secondary-color);
        font-size: 1.8rem;
        margin: auto;
        background: none;
        border: none;
        text-transform: uppercase;
        font-weight: 400;
      }

      .arrow--discover {
        position: absolute;
        animation: jumpInfinite 1.2s infinite;
        bottom: 8%;
        left: 50%;
        transform: translateX(-50%);

        font-size: 2rem;
      }

      #topBtn {
        display: none;
        position: fixed;
        bottom: 5px;
        left: 5px;
        z-index: 99;
        font-size: 18px;
        border: 2px solid white;
        outline: none;
        background-color: var(--primary-color);
        color: white;
        cursor: pointer;
        padding: 10px 15px;
        margin: 10px 20px;
        border-radius: 4px;
      }

      #topBtn:hover {
        background-color: var(--accent-color);
      }
      /* 
.fa-angle-up.arrow {
  animation: none;
  position: initial;
  left: 50%;
  padding: 7px;
  transform: none;
}

.btn_toggle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.button--toggle {
  margin: 0 10px;
  background: none;
  font-size: 1.5rem;
  border: none;
  font-weight: 400;
  padding: 6px 10px;
} */

      /* .arrow--toggle {
  color: var(--secondary-color);
  font-size: 2rem;
  margin: 0 10px;
}

.toggle {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: var(--primary-color);
  border-bottom-right-radius: 20px;
  border-bottom-left-radius: 20px;
  cursor: pointer;
  transition: 0.5s all ease;
  background: var(--accent-color);
}

.toggle:hover {
  background: #8d1ae4;
} */

      @keyframes jumpInfinite {
        0% {
          bottom: 8%;
        }
        50% {
          bottom: 5%;
        }
        100% {
          bottom: 8%;
        }
      }

      @keyframes scaleIn {
        0% {
          transform: scale(95%);
        }
        50% {
          transform: scale(110%);
        }
        100% {
          transform: scale(95%);
        }
      }

      /* intro */

      .intro {
        width: 80%;
        text-align: center;
      }

      .intro_title {
        font-size: 1.8rem;
        font-weight: 800;
        text-align: center;
        color: var(--accent-color);
        text-transform: uppercase;
        margin-bottom: 20px;
      }

      .intro_heading {
        margin-bottom: 20px;
      }

      .intro_text {
        margin: 20px 0;
        text-align: center;
        /* font-size: 1.3rem; */
      }

      .intro_img {
        display: flex;
        justify-content: center;
        padding: 30px 0;
        max-width: 1000px;
        margin: auto;
        /* max-height: 450px; */
      }

      .intro_img img {
        object-fit: contain;
      }

      .intro--contact {
        height: 10vh;
        padding-bottom: 20px;
        margin-bottom: 20px;
      }

      .intro_grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        align-items: start;
        justify-content: space-around;
        width: 100%;
      }

      /* imgage box */

      .img-box {
        /* opacity: 0.7; */
        /* border-top: 5px solid white; */
        height: 350px;
        width: 100%;
        position: relative;
        border-bottom: 6px solid white;
      }
      .img-box img {
        object-position: 50% 58%;
      }

      .img-box_text {
        font-style: italic;
      }

      /* CTA */

      .cta {
        display: grid;
        width: 80%;
      }

      .cta_title {
        padding-bottom: 10px;
      }
      .cta--grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
      }

      .cta--inverse {
        display: grid;
        grid-template-columns: 1fr 2fr;
      }

      .cta_text {
        text-align: center;
        margin-bottom: 20px;
      }
      .cta--grid .cta_text,
      .cta--inverse .cta_text {
        text-align: left;
      }

      .cta_btn {
        display: flex;
        align-items: center;
        justify-content: center;
        max-width: 1200px;
        margin: auto;
      }

      .cta_btn--col {
        flex-direction: column;
      }

      .cta_img {
        height: 280px;
        width: 100%;
      }

      /* mobile */

      .desktop-version {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .page-intro {
        height: 40vh;
      }

      .page-intro .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* Content */

      .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding-top: 20px;
      }

      .item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 30px;
        margin: 30px 0;
        border-radius: 20px;
        transition: all 0.5s ease-in-out;
      }

      .item--concept {
        background-image: linear-gradient(90deg, #a87bcb 0%, black 60%);
      }

      .item--inverse {
        background-image: linear-gradient(-90deg, #a87bcb 0%, black 60%);
      }
      .item_text {
        width: 60%;
      }

      .item_text p {
        margin: 10px 0;
      }

      .item_layer {
        width: 35%;
        height: 250px;
        border-radius: 20px;
        box-shadow: 0px 15px 35px rgba(0, 0, 0, 0.2);
        overflow: hidden;
      }

      .item_image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        -webkit-transition: all 1s ease-in-out; /* Safari et Chrome */
        -moz-transition: all 1s ease-in-out; /* Firefox */
        -ms-transition: all 1s ease-in-out; /* Internet Explorer 9 */
        -o-transition: all 1s ease-in-out; /* Opera */
        transition: all 1s ease-in-out;
        transform: scale(1.25);
        filter: brightness(100%);
      }

      .item:hover .item_image {
        -webkit-transform: scale(1); /* Safari et Chrome */
        -moz-transform: scale(1); /* Firefox */
        -ms-transform: scale(1); /* Internet Explorer 9 */
        -o-transform: scale(1); /* Opera */
        transform: scale(1);
      }
    </style>
  </body>
</html>
